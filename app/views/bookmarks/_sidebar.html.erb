<div class="col-md-2">
  <ul class="nav nav-pills nav-stacked">
    
    <li role="presentation" <%= raw('class="active"') if @active_id.nil? %> ><%= link_to "ALL", bookmarks_path %></li>

    <% @categories.each.with_index(1) do |category,index| %>
      <li role="presentation" <%= raw('class="active"') if @active_id == category.id %> >
        <%= link_to category_filter_path(:id => category.id) do %><%= index %>.<%= category.title %><% end %>
      </li>
    <% end %>

  </ul>
</div>

