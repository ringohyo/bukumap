<%= form_for(@bookmark) do |f| %>

  <% if @bookmark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>
      <ul>
      <% @bookmark.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, current_user.categories, :id, :title, {} ,{:class => "btn btn-default btn-lg dropdown-toggle"} %>
  </div>  
  <div class="actions">
    <%= f.submit :class => "btn btn-info" %>
    <p align="right"><%= link_to '削除', @bookmark, method: :delete, data: { confirm: '本当に削除しますか?' } , class: "btn btn-danger" %></p>
  </div>
